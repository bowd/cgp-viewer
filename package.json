{
	"name": "cgp-viewer",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"start": "node --enable-source-maps --experimental-specifier-resolution=node dist/index.js"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@iarna/toml": "^2.2.5",
		"@tanstack/react-query": "^5.17.15",
		"@types/marked-terminal": "^6.0.1",
		"ink": "^4.4.1",
		"ink-spinner": "^5.0.0",
		"marked": "^11.1.1",
		"marked-terminal": "^6.2.0",
		"meow": "^11.0.0",
		"react": "^18.2.0",
		"toml": "^3.0.0",
		"tslog": "^4.9.2",
		"viem": "^2.4.0",
		"wagmi": "^2.3.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
